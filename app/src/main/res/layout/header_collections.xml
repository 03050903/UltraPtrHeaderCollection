<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <org.ptrheader.library.ballslogan.BallSloganHeader
        android:id="@+id/main_header_ball_slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:colorScheme1="@color/ptr_header_yellow"
        app:colorScheme2="@color/ptr_header_green"
        app:colorScheme3="@color/ptr_header_red"
        app:colorScheme4="@color/ptr_header_blue"
        app:rotateBallsOnPullDown="true"
        app:sloganDrawable="@drawable/ptr_header_slogan"
        />
    <org.ptrheader.library.netease.NetEaseMarsView
        android:id="@+id/main_header_net_ease_mars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"/>

    <org.ptrheader.library.netease.NetEaseNewsHeader
        android:id="@+id/main_header_net_ease_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"/>
</LinearLayout>