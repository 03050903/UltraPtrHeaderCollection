<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar style="@style/ToolBar">

        <RelativeLayout style="@style/ToolBarContainerRelative">

            <ImageButton
                style="@style/ToolBarBackButton"
                android:contentDescription="@string/app_name"
                />

            <TextView style="@style/ToolBarTitle"/>
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <in.srain.cube.views.ptr.PtrFrameLayout
        android:id="@+id/inner_ptr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Hello World!"
            android:textSize="@dimen/text_size_md_title"/>
    </in.srain.cube.views.ptr.PtrFrameLayout>
</LinearLayout>