<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.ptrheader.ultraptrheadercollection.MainActivity">

    <in.srain.cube.views.ptr.PtrFrameLayout
        android:id="@+id/main_ptr"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <org.ptrheader.library.ballslogan.BallSloganHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:colorScheme1="@color/ptr_header_yellow"
            app:colorScheme2="@color/ptr_header_green"
            app:colorScheme3="@color/ptr_header_red"
            app:colorScheme4="@color/ptr_header_blue"
            app:rotateBallsOnPullDown="true"
            app:sloganDrawable="@drawable/ptr_header_slogan"
            >

        </org.ptrheader.library.ballslogan.BallSloganHeader>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Hello World!"/>
    </in.srain.cube.views.ptr.PtrFrameLayout>
</RelativeLayout>
